<div class="jumbotron text-center" id="donations">
	<h1>All bikes available</h1>
	
	<p>{{ message }}</p>

  <div ng-controller="donationsController as list">
	<table align="center" valign="middle">
	  <tbody ng-repeat="bike in bikes | orderBy:'-users'">
        <tr style="height:55px; font-size:20px; margin-left:20px; margin-right:20px; valign="middle"; >
        	<td>
            <span class="glyphicon glyphicon-user" ng-click="incrementUsers(bike.id)"></span>
              {{bike.users}}
             </td>

          <td name="brand">
             <span style="height:55px; font-size:20px; margin-left:20px; margin-right:10px; valign="middle";>{{bike.brand}}</span>
         	</td>
        <td>
            <span style="height:55px; font-size:20px; margin-left:10px; margin-right:10px; valign="middle";>{{bike.type}}</span>
        </td>
        <td name="gender">
            <span style="height:55px; font-size:20px; margin-left:10px; margin-right:10px; valign="middle";>{{bike.gender}}</span>
        </td>
          <td name="year">
              <span style="height:55px; font-size:20px; margin-left:10px; margin-right:10px; valign="middle";>{{bike.year}}</span>
    		  </td>
          <td>
             <span style="height:55px; font-size:20px; margin-left:10px;   margin-right:20px; valign="middle";>
               <button type="button" class="btn btn-default" ng-click="delete(bike.id)">
                   <span class="glyphicon glyphicon-remove"></span> Remove 
                </button>
                <button type="button" class="btn btn-default" ng-click="update(bike)">
                   <span class="glyphicon glyphicon-edit"></span> Edit 
                </button>
             </span>    
             </td>

    	</tr>
      </tbody>
    </table> 
  </div>
</div>